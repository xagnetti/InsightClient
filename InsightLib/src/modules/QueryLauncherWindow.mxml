<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    xmlns:s="library://ns.adobe.com/flex/spark"
    width="350"
    height="300"
    skinClass="flex.utils.spark.resize.ResizableDraggableSelectableTitleWindowSkin"
    title="Chart"
    >
    <fx:Script>
        <![CDATA[
            import mx.events.FlexEvent;

            import services.QueryManager;

            protected function executeQueryHandler( event : MouseEvent ) : void
            {
                QueryManager.instance.createQuery( queryStr.text, "test" );
            }
        ]]>
    </fx:Script>

    <s:VGroup>

        <s:TextArea id="queryStr"
            >
            <s:text>list Customer;</s:text>
        </s:TextArea>
        <s:Button label="Create Query"
            click="executeQueryHandler(event)"
            />

        <s:TextArea text="{ QueryManager.instance.currentResult }"
            enabled="false"
            />

    </s:VGroup>

</s:TitleWindow>
